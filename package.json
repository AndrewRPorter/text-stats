{
	"name": "text-stats",
	"displayName": "text-stats",
	"description": "Display text statistics of the currently opened file",
    "version": "0.0.1",
    "publisher": "AndrewRPorter",
    "icon": "images/icon.png",
	"engines": {
		"vscode": "^1.15.0"
	},
	"categories": [
		"Other"
    ],
    "bugs": {
        "url": "https://github.com/AndrewRPorter/text-stats/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/AndrewRPorter/text-stats.git"
    },
	"activationEvents": [
        "onCommand:extension.textStats",
        "*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
			"command": "extension.textStats",
			"title": "Text Statistics"
		}]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.0-next.0"
	}
}
